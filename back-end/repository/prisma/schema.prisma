generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String

  characterId Int @unique
  character   Character @relation(fields: [characterId], references: [id])
}

model Character {
  id           Int    @id @default(autoincrement())
  name         String
  level        Int
  xp           Int
  strength     Int
  speed        Int
  magic        Int
  dexterity    Int
  healthPoints Int
  manaPoints   Int
  luck         Int
  defense      Int
  magicDefense Int
  progress     String
  characterClass        String
  user User?    
}